<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Custom.Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/colors_text_background</item>
        <item name="boxBackgroundColor">@color/colors_text_background</item>
        <item name="boxStrokeColor">@color/colors_text_border</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Custom.Body3</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Widget.Custom.Text.Search.Front" parent="Widget.Custom.Text">
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="Widget.Custom.Text.Clickable" parent="Widget.MaterialComponents.Button">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>