<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Custom.Button" parent="Widget.MaterialComponents.Button">

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Custom.Button.Small">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Custom.WhiteButton" parent="Widget.Custom.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Custom.WhiteButton</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.Custom.WhiteButton" parent="AppTheme">
        <item name="colorPrimary">#cc000000</item>
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
    </style>

</resources>